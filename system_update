#!/bin/bash

echo "Updating System . . ."
apt-get update && apt-get --yes --force-yes upgrade

# set noninteractive installation
export DEBIAN_FRONTEND=noninteractive
#install tzdata package
apt-get install -y tzdata
# set your timezone
ln -fs /usr/share/zoneinfo/America/New_York /etc/localtime
dpkg-reconfigure --frontend noninteractive tzdata

echo "Installing some dependencies . . . . . ."
apt-get --yes --force-yes install wget curl git aria aria2 aria2c
apt-get --yes --force-yes install git-core gnupg wget curl flex bison build-essential zip curl zlib1g-dev gcc-multilib g++-multilib libc6-dev-i386 lib32ncurses5-dev x11proto-core-dev libx11-dev lib32z1-dev libgl1-mesa-dev libxml2-utils xsltproc unzip fontconfig bc kmod neofetch htop
apt-get --yes --force-yes install openssh-server screen python git openjdk-8-jdk android-tools-adb bc bison
apt-get --yes --force-yes install bison build-essential curl flex g++-multilib gcc-multilib gnupg gperf imagemagick
apt-get --yes --force-yes install lib32ncurses-dev lib32readline-dev lib32z1-dev liblz4-tool libncurses5-dev libsdl1.2-dev
apt-get --yes --force-yes install libssl-dev libxml2 libxml2-utils lzop pngcrush rsync schedtool squashfs-tools xsltproc
apt-get --yes --force-yes install yasm zip zlib1g-dev libtinfo5 libncurses5
